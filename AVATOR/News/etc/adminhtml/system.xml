<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <tab id="avator" translate="label" sortOrder="200">
            <label>AVATOR</label>
        </tab>
        <section id="news" translate="label" type="text" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
            <class>separator-top</class>
            <label>News</label>
            <tab>AVATOR</tab>
            <resource>AVATOR_News::config</resource>
            <group id="config" translate="label" type="text" sortOrder="90" showInDefault="1" showInWebsite="1" showInStore="1">
                <label>Product Fields Auto-Generation</label>
                <field id="meta_title" translate="label comment" type="text" sortOrder="20" showInDefault="1" showInWebsite="0" showInStore="0">
                    <label>Mask for Meta Title</label>
                    <comment>Use {{name}} as Product Name placeholder</comment>
                </field>

            </group>
        </section>
    </system>
</config>